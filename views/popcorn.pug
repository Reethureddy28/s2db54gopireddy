extends layout

block content

  h1= title
  p welcome to #{title}
   - let items = results
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.popcorn_flavour}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.popcorn_quantity}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.popcorn_cost}<br>

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }
