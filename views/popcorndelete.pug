extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let popcornid = toShow._id 
    - let popcorn_flavour = toShow.popcorn_flavour 
    - let popcorn_cost = toShow.popcorn_cost 
    - let popcorn_quantity = toShow.popcorn_quantity 
    - let actionid = "/resource/popcorn/" + popcornid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='popcornAttr mr-3') popcorn ID is: 
        div #{popcornid} 
      div.row 
        div(class='popcornAttr mr-3') popcorn flavour is: 
        div #{popcorn_flavour} 
      div.row 
        div(class='popcornAttr mr-3') popcorn quantity is: 
        div #{popcorn_quantity} 
      div.row 
        div(class='popcornAttr mr-3') popcorn Cost is: 
        div #{popcorn_cost} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/popcorn' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/popcorn' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 
 
       
   
 
 